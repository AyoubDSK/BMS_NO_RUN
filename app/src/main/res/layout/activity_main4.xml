<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">>



    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="186dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comfortaabold"
            android:text="Créez votre premier"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/comfortaabold"
            android:text="Compte"
            android:textColor="#000"
            android:textSize="32sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="434dp"
        android:layout_height="175dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/bms1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="434dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="297dp"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/edNomID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="Nom"
            android:background="@drawable/back_edit"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/comfortaabold"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edPrenomID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:textSize="15sp"
            android:background="@drawable/back_edit"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaabold"
            android:inputType="text"/>


        <EditText
            android:id="@+id/edEmail2ID2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/comfortaabold"
            android:hint="Numéro de téléphone ou adrasse e-mail"
            android:inputType="text"

            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edPass2ID2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/comfortaabold"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/AdminCheck"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:checked="false"
            android:text="Admin"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="537dp" />


        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="106dp"
            android:layout_height="67dp"
            android:text="Agent"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="537dp" />

        <Button
            android:id="@+id/buSaveID3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_but"
            android:fontFamily="@font/comfortaabold"
            android:text="Enregistrer"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtRetourID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaabold"
            android:gravity="center"
            android:text="retour !"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="-32dp"
            tools:layout_editor_absoluteY="669dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>