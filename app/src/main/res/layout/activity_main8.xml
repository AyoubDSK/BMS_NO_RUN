<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="432dp"
        android:layout_height="67dp"
        android:layout_marginTop="668dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/bms1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="139dp">

        <TextView
            android:id="@+id/ListeView"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaabold"
            android:paddingLeft="20dp"
            android:text="Liste"
            android:textColor="#000"
            android:textSize="32sp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/Cat"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comfortaabold"
            android:text="Cat 2 Multiprise :"
            android:textColor="#000"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/P1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="16 A (Branche 3 ,4 ,6)"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/R1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="RF‐4"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <CheckBox
                android:id="@+id/CB2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                tools:ignore="InefficientWeight,RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Produit"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/comfortaabold"
                        android:text="10 A (Branche 3 ,4)"
                        android:textColor="#000"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/RF"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/comfortaabold"
                        android:text="RF‐5"
                        android:textColor="#000"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <CheckBox
                        android:id="@+id/CB"
                        android:layout_width="64dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PR2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Fiche Voleuse"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/R2_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="RF‐6"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <CheckBox
                android:id="@+id/CB3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                tools:ignore="InefficientWeight,RtlHardcoded" />

        </LinearLayout>

        <Button
            android:id="@+id/buNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_but"
            android:fontFamily="@font/comfortaabold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>