<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="434dp"
        android:layout_height="175dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/bms1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnknownIdInLayout" />

    <LinearLayout
        android:layout_width="444dp"
        android:layout_height="159dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="175dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:fontFamily="@font/comfortaabold"
            android:text="Magasin"
            android:textColor="#000"
            android:textSize="32sp"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="397dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="334dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/edPass1ID4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/comfortaabold"
            android:hint="Nom"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry" />

        <EditText
            android:id="@+id/edPass1ID5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/comfortaabold"
            android:hint="Prenom"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry" />

        <EditText
            android:id="@+id/edEmail1ID4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/comfortaabold"
            android:hint="Numéro de téléphone ou adrasse e-mail"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/buLoginID4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/back_but"
            android:fontFamily="@font/comfortaabold"
            android:text="Connexion"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>