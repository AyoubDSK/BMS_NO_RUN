<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="432dp"
        android:layout_height="67dp"
        android:layout_marginTop="668dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/bms1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="4dp">

        <TextView
            android:id="@+id/ListeView"
            android:layout_width="427dp"
            android:layout_height="92dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaabold"
            android:paddingLeft="20dp"
            android:text="Liste"
            android:textColor="#000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/Cat"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/comfortaabold"
            android:text="Cat 3 Lampe :"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Produit"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/comfortaabold"
                        android:text="Lampe LED Blanche"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/RF"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/comfortaabold"
                        android:text="RF‐7"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/CB"
                        android:layout_width="64dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/P1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Lampe LED "
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/R1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="RF‐8"
                android:textColor="#000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/CB2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PR2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="Lampe LED Filament GOLD"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/R2_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaabold"
                android:text="RF‐9"
                android:textColor="#000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/CB3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/BuNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_but"
            android:fontFamily="@font/comfortaabold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>